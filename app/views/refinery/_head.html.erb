<meta charset='<%= Rails.application.config.encoding %>' />
<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
<meta name='viewport' content='width=device-width, initial-scale=1'>

<title><%= browser_title(yield(:title)) %></title>

<%= raw %(<meta name="description" content="#{@meta.meta_description}" />) if @meta.meta_description.present? -%>
<%= raw %(<link rel="canonical" content="#{@canonical}" />) if @canonical.present? -%>
<%= csrf_meta_tags if Refinery::Core.authenticity_token_on_frontend -%>

<!-- SEO -->
<meta name='description' content='155 characters of message matching text with a call to action goes here'>
<!-- FB OG properties -->
<meta property='og:title' content='Evil Wizard Elixirs'>
<meta property='og:type' content='website'>
<meta property='og:image' content='og-image.png'>
<meta property='og:url' content='http://www.evilwizard.ca/'>
<meta property='og:description' content='297 characters description'>
<!-- TWITTER OG PROPERTIES -->
<meta name='twitter:card' content='summary'>
<meta name='twitter:url' content='http://www.evilwizard.ca/'>
<meta name='twitter:title' content='Evil Wizard Elixirs'>
<meta name='twitter:description' content='200 characters description'>
<meta name='twitter:image' content='og-image.png'>
<%= yield :meta %>

<%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Josefin+Slab:400,700' %>
<%= stylesheet_link_tag "application" %>
<%= yield :stylesheets %>

<link href='favicon.png' rel='shortcut icon'>
<link href='apple-touch-icon.png' rel='apple-touch-icon'>

<%= render '/refinery/google_analytics' %>

<%= javascript_include_tag 'modernizr-min' %>
