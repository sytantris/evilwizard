/* header */
@import 'sassy/include';

header#main-header {
  position: fixed;
  top: 0;
  width: 100%;
  height: $HeaderHeight;
  @include transition(all 0.4s ease);
  z-index: 1000;

  &.sticky {
    height: $HeaderHeightPinned;

    hgroup {
      display: none;
    }
    nav {
      border-radius: 10px;
    }
  }

  @include respond-to-max(480px) {
    height: $HeaderHeight * 1.2;
  }

  .sidebar {
    padding: 20px;
    width: 150px;

    img#mask {
      width: 100%;
      height: auto;
      cursor: pointer;

      @include respond-to-interval(480px, 600px) {
        width: 15%;
        max-width: 150px;
      }

      @include respond-to-max(480px) {
        padding: 5px;
        max-width: 70px;
      }
    }
  }

  .container {
    background-color: black;
    background: url('<%= image_path 'fake_brick.png' %>');
    position: relative;

    hgroup {
      color: white;
      text-align: center;
      padding: 30px 10px;
      @include header-font;
      h1 {
        margin-bottom: 20px;
        font-size: 4vw;
      }

      h2 {
        font-size: 1.5vw;
      }

      @include respond-to-interval(480px, 768px) {
        h1 {
          font-size: 6vw;
        }

        h2 {
          font-size: 2vw;
        }
      }

      @include respond-to-max(480px) {
        padding: 10px;

        h1 {
          font-size: 2rem;
          margin-bottom: 10px;
        }

        h2 {
          font-size: 1rem;
          margin-bottom: 10px;
        }
      }
    }

    nav {
      background-color: DarkGrey;
      background: url('<%= image_path 'dark_brick.png' %>');
      text-align: center;
      font-family: $FontNav;
      font-size: 2rem;
      font-size: 2vw;
      letter-spacing: 1px;
      position: absolute;
      bottom: 20px;
      width: 100%;
      border-radius: 10px;

      @include respond-to-max(1024px) {
        font-size: 1.3rem;

        span {
          display: none;
        }
      }

      ul {
        text-align: center;
        display: inline-block;
        margin: 0;
        padding: 10px 0;

        &:last-of-type {
          margin-left: 10px;
        }

        @include respond-to-max(810px) {
          padding: 0;

          &:last-of-type {
            margin: 0;
          }
        }

        @include respond-to-min(673px) {
          padding: 10px 0;
        }

        @include respond-to-min(661px) {
          &:last-of-type {
            margin-left: 10px;
          }
        }

        li {
          display: inline-block;

          @include respond-to-min(1024px) {
            padding: 5px 10px !important;
          }

          @include respond-to-min(800px) {
            padding: 5px 10px;
          }

          @include respond-to-interval(300px, 800px) {
            padding: 5px 5px;
          }

          @include respond-to-max(500px) {
            &.drinks {
              display: inline-block;
            }
          }

          a {
            color: $ColourNavLink;
            text-shadow: 2px 2px 3px black;

            &:hover {
              color: $ColourNavLinkHover;
              text-shadow: 2px 2px 3px black;
            }
          }
        }
      }
    }
  }
}
