@import 'sassy/include';
@import 'fonts/fonts';

/* global styles */

.row {
  display: flex;
  flex-flow: row nowrap;

  div.sidebar {
    background-color: grey;
    background: url('<%= image_path 'fake_brick.png' %>');
    flex: 1 1 15%;
    max-width: 150px;
    min-width: 70px;

    @include respond-to-max(480px) {
      display: none;
    }

  }

  div.container {
    flex: 3 1 85%;
  }
}

* { @include border-box; }

body {
  font: 18px $FontBody;
  background-color: black;
  background: url('<%= image_path 'fake_brick.png' %>');
  text-shadow: 2px 2px 3px black;
  @include transition(all 0.4s ease);
  margin-top: $HeaderHeight;

  &.sticky {
    margin-top: $HeaderHeightPinned !important;

    @include respond-to-max(480px) {
      margin-top: $HeaderHeightPinned !important;
    }
  }
}

