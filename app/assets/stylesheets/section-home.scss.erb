@import 'sassy/include';

#home {
  div {
    @include respond-to-max(500px) {
      text-align: center;
    }
  }

  .img {
    flex: 1 200px;
    display: inline-block;

    @include respond-to-min(600px) {
      margin-right: 30px;
    }

    @include respond-to-max(600px) {
      margin-bottom: 30px;
    }
    
    img {
      border-radius: 0 10% 0 10%;
    }
  }
  
  #info {
    flex: 1 50%;
    display: inline-block;

    p {
      margin: 20px 10px;
      font-size: 1.5rem;
      line-height: 1.5;
      color: $ColourSectionText;

      span {
        font-size: 2rem;
      }
    }
      
  }
}

