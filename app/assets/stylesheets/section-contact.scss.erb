@import 'sassy/include';

#contact {
  display: flex;
  flex-flow: row wrap;
  align-items: stretch;
  justify-content: center;
  text-align: center;

  h2 {
    flex: 1 100%;
    text-align: right;
    margin-right: 100px;

    @include respond-to-max(600px) {
      text-align: center;
    }
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 20px;
  }

  #contact-text {
    margin-bottom: 30px;
    color: $ColourTwoLight;

    h3 {
      margin: 20px;

      @include respond-to-max(480px) {
        margin: 0;
        margin-bottom: 20px;
      }
    }

    ul {
      margin: 20px 40px;
      list-style-type: square;

      @include respond-to-max(480px) {
        margin: 20px;
        padding-left: 20px;
      }

      li {
        margin-bottom: 10px;

        span {
          color: $ColourTwoLightest;
        }
      }
    }
  }

  .contacts {
    flex: 1 30%;
    display: inline-block;
    width: 30%;
    min-height: 200px;
    text-align: center;
    margin: 0 15px 30px;
    padding: 20px;
    border: 1px solid white;
    border-radius: 0 10% 0 10%;
    vertical-align: middle;
    background: url('<%= image_path 'fake_brick.png' %>');
    color: $ColourTwoLight;

    @include respond-to-max(1024px) {
      flex: 1 50%;
    }

    @include respond-to-max(600px) {
      flex: 1 100%;
    }

    @include respond-to-max(480px) {
      width: 80%;
    }

    p {
      margin-bottom: 10px;
    }

    address {
      margin-top: 20px;
      color: $ColourTwoLightest;
    }
  }
}
