@import 'sassy/include';

#about {
  text-align: center;

  h2 {
    margin-bottom: 30px;
  }

  > ul {
    display: inline-block;
    padding: 0;

    @include respond-to-max(800px) {
      &:last-of-type {
        margin-top: 15px;
      }
    }

    @include respond-to-max(400px) {
      display: block;
      max-width: 300px;
      margin: 0 auto;
    }

    li {
      display: inline-block;
      padding: 10px;
      margin: 0 5px;
      border: 1px solid white;
      border-radius: 0 10px 0 10px;
      background: url('<%= image_path 'dark_brick.png' %>');
      @include transition(all ease-in-out 0.2s);

      &:hover {
        cursor: pointer;
        background: $ColourNavLink;
      }

      &.active {
        background: $ColourNavLinkHover;
      }

      h3 {
        font-size: 1.2rem;
        font-weight: bold;
      }

      @include respond-to-max(400px) {
        display: block;
        margin: 15px 0;
      }
    }
  }

  #about-text {
    overflow: auto;
    max-height: 400px;
  }
}
